@using RTMAutoRest.Web.ViewModels
@model HomeViewModel

@{
    ViewData["Title"] = "RTM AutoRest.Web";
}


<div style="color: #999; font-size:30px; top: 50%; text-align: center; position: absolute; margin: -9% 0 0 -100px; left: 50%;">
    @ViewData["Title"]<br />
    <div style="margin-top: 15px;font-size: 15px; color: #333;">
        API Endpoint Status: 
        <span style="color: @(Model.EndpointStatus == HomeViewModel.Success ? "green" : "red")">@Model.EndpointStatus</span>
    </div>
</div>